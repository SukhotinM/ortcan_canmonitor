default_CONFIG = CONFIG_OC_CANMONITOR=n

ifndef ANT
ANT=/opt/ant/bin/ant
endif

ifndef JAVA_HOME
JAVA_HOME=/opt/java
endif

export JAVA_HOME

.PHONY: canmonitor.jar xmlconf.jar

ifeq ($(CONFIG_OC_CANMONITOR),y)
utils-pass-local: canmonitor.jar xmlconf.jar
endif

xmlconf.jar canmonitor.jar:
	$(ANT) -Djava_class_dir=$(USER_OBJS_DIR)/ -Djava_lib_dir=$(USER_BIN_DIR)/ -buildfile $(srcdir)/build.xml
